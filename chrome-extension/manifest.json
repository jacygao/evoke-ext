{
  "manifest_version": 3,
  "name": "neurolize.io",
  "version": "1.0",
  "description": "A Chrome extension that allows users to enter text and submit it to a POST API endpoint.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png"
    },
    "default_title": "neurolize.io"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "side_panel": {
    "default_path": "src/popup/notes.html"
  },
  "icons": {
    "16": "icon16.png"
  }
}